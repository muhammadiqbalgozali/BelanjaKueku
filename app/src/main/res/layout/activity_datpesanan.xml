<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_datpesanan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/pic5"
    tools:context="com.example.iqbalgozali.projectblankue.datpesanan">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="55dp"
        android:id="@+id/namapemesan"
        android:text="nama Pemsan"
        android:textSize="30dp"
        android:layout_below="@+id/editText6"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:text="Nama pemesan :"
        android:textSize="15dp"
        android:layout_below="@+id/editText6"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:id="@+id/editText8" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data Pemesana "
        android:textSize="30dp"
        android:gravity="center"
        android:id="@+id/editText6"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Alamat Pemesan :"
        android:textSize="15dp"
        android:layout_marginTop="28dp"
        android:id="@+id/editText9"
        android:layout_below="@+id/namapemesan"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/alamat"
        android:text="alamat pemesan"
        android:textSize="30dp"
        android:layout_below="@+id/editText9"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/namkue"
        android:text="nama kue"
        android:textSize="30dp"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/alamat"
        android:layout_alignParentStart="true" />

    <Button
        android:text="pesen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/hrgkue"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Harga Kue"
        android:textSize="25dp"
        android:id="@+id/hrgkue"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/namkue"
        android:layout_alignParentStart="true" />

</RelativeLayout>
</ScrollView>
